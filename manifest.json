{
  "manifest_version": 3,
  "name": "PrayUp - Never miss a prayer.",
  "version": "1.0.0",
  "description": "Never miss a prayer.",
  "permissions": [
    "alarms",
    "storage",
    "geolocation",
    "offscreen",
    "activeTab",
    "scripting",
    "tabs",
    "system.display"
  ],
  "host_permissions": [
    "https://api.aladhan.com/*",
    "https://api.bigdatacloud.net/*",
    "https://api.alquran.cloud/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "default_title": "PrayUp"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
